<%- layout('layout.ejs') %>
<div>
    <h3><%- title %></h3>
    <p><a href="/forms/create" class="btn btn-success">Add a student</a></p>
    <table class="table table-striped table-condensed">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>School</th>
            <th>Start Date</th>
            <th></th>
        </tr>
        <% for(var i=0; i<data.length; i++) { %>
            <tr>
                <td><%= data[i].FirstName %></td>
                <td><%= data[i].LastName %></td>
                <td><%= data[i].School %></td>
                <td><%= data[i].StartDate %></td>
                <td>
                    <a href="/forms/edit/<%= data[i]._id %>" class="btn btn-primary btn-small">edit</a>
                    <a href="/forms/delete/<%= data[i]._id %>" class="btn btn-primary btn-small">del</a>
                </td>
            </tr>
        <% } %>
    </table>
</div>